    <groupId>org.groodle.boot</groupId>
    <artifactId>micro-services</artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <packaging>pom</packaging>
    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
        <java.version>1.8</java.version>
        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>
        <spring-cloud.version>Hoxton.SR1</spring-cloud.version>
        <docker.image.prefix>groodle</docker.image.prefix>
        <spring-boot.version>2.2.2.RELEASE</spring-boot.version>
    </properties>
    <modules>
        <module>parent-boot</module>
        <module>config-service</module>
        <module>discovery-service</module>
        <module>api-gateway-service</module>
        <module>zipkin-distributed-tracing-server</module>
        <module>customer-service</module>
        <module>employee-service</module>
        <module>spring-boot-admin-server</module>
    </modules>
</project>